{
  "name": "promise-controller",
  "version": "0.5.2",
  "description": "Advanced control of JavaScript promises",
  "author": {
    "name": "Vitaliy Potapov",
    "email": "noginsk@rambler.ru"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/vitalets/promise-controller.git"
  },
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "lint": "eslint src test",
    "build": "rollup -c",
    "test": "mocha test/setup.js test/specs",
    "test:bundle": "LIB_PATH=../lib/bundle.es5.js npm t",
    "test:installed": "node scripts/install-local && LIB_PATH=../.installed/node_modules/promise-controller npm t",
    "ci": "run-s lint build test test:bundle",
    "docs": "node scripts/docs",
    "prerelease": "run-s lint build test test:bundle test:installed",
    "release": "npm version $VER && npm publish && git push --follow-tags --no-verify",
    "release-patch": "VER=patch npm run release",
    "release-minor": "VER=minor npm run release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm t",
      "pre-push": "run-s lint build test test:bundle"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.js": "eslint"
  },
  "main": "src/index.js",
  "browser": "lib/bundle.es5.js",
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "chai": "^4.2.0",
    "eslint": "^6.5.1",
    "husky": "^3.0.9",
    "install-local": "^1.0.0",
    "jsdoc-to-markdown": "^5.0.2",
    "lint-staged": "^9.4.2",
    "mocha": "^6.2.2",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.25.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-banner": "^0.2.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-delete": "^1.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "sinon": "^7.5.0"
  },
  "keywords": [
    "promise",
    "promises",
    "promise-library",
    "promise-wrapper",
    "promise-control",
    "promise-api"
  ],
  "license": "MIT"
}
